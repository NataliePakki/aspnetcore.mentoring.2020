@model IEnumerable<Shop.Web.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Categories";
}
<table class="table">
    <thead>
        <tr>
            <th>
                Picture
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="images/@item.CategoryId" height="42" width="42" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
            </td>
        </tr>
        }
    </tbody>
</table>