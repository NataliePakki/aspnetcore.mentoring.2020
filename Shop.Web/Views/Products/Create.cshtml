@model AspNetCoreMentoring.ViewModels.CreateProductViewModel

@{
    ViewData["Title"] = "Add Product";
}
<form method="post">
    <div>
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" />
        <span asp-validation-for="ProductName" />
    </div>
    <div>
        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID" asp-items="Model.Categories"></select>
    </div>
    <div>
        <label asp-for="QuantityPerUnit"></label>
        <input asp-for="QuantityPerUnit" />
    </div>
    <div>
        <label asp-for="UnitPrice"></label>
        <input asp-for="UnitPrice" />
    </div>
    <div>
        <label asp-for="UnitsInStock"></label>
        <input asp-for="UnitsInStock" />
    </div>
    <div>
        <label asp-for="SupplierID"></label>
        <select asp-for="SupplierID" asp-items="Model.Suppliers"></select>
    </div>
    <br /><button type="submit">Add</button>
</form>
@section Scripts{

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}