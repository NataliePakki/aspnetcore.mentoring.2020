@model Shop.Web.ViewModels.CreateProductViewModel
@inject Shop.Web.Helpers.IFormDataHelper FormDataHelper

@{
    ViewData["Title"] = "Add Product";
}
<form method="post">
    <div>
        <label asp-for="ProductName"></label>
        <input asp-for="ProductName" />
        <span asp-validation-for="ProductName" />
    </div>
    <div>
        <label asp-for="CategoryID"></label>
        <select asp-for="CategoryID" asp-items="FormDataHelper.GetCategories()"></select>
    </div>
    <div>
        <label asp-for="QuantityPerUnit"></label>
        <input asp-for="QuantityPerUnit" />
    </div>
    <div>
        <label asp-for="UnitPrice"></label>
        <input asp-for="UnitPrice" />
    </div>
    <div>
        <label asp-for="UnitsInStock"></label>
        <input asp-for="UnitsInStock" />
    </div>
    <div>
        <label asp-for="SupplierID"></label>
        <select asp-for="SupplierID" asp-items="FormDataHelper.GetSuppliers()"></select>
    </div>
    <br /><button type="submit">Add</button>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}